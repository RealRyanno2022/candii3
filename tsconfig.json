{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./",
    "types": ["react", "jest", "node", "react-native"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["components", "node_modules/@types"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
